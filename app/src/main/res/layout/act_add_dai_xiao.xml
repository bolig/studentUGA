<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.peoit.android.studentuga.ui.AddDaiXiaoActivity">

    <LinearLayout
        android:id="@+id/ll_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/layout_80dp"
            android:layout_height="@dimen/layout_80dp"
            android:layout_margin="@dimen/layout_m8dp"
            android:src="@drawable/test_goods" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_80dp"
            android:layout_marginBottom="@dimen/layout_m8dp"
            android:layout_marginRight="@dimen/layout_m8dp"
            android:layout_marginTop="@dimen/layout_m8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/black_2"
                android:textSize="@dimen/text_14sp" />


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_4dp"
                android:layout_marginTop="@dimen/layout_4dp"
                android:text=""
                android:textColor="@color/md_red_500"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_m8dp"
        android:background="@drawable/home_header_line"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1dp"
        android:layout_marginTop="@dimen/layout_m16dp"
        android:background="@color/md_grey_300"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:text="商品名称"
            android:textSize="@dimen/text_16sp" />

        <View
            android:layout_width="@dimen/layout_1dp"
            android:layout_height="@dimen/layout_24dp"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:layout_marginRight="@dimen/layout_m8dp"
            android:background="@color/md_grey_300"></View>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_m8dp"
            android:layout_weight="1"
            android:background="@color/trans_w"
            android:hint="请输入您修改的商品名称"
            android:textColor="@color/black_1"
            android:textColorHint="@color/black_3"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1dp"
        android:background="@color/md_grey_300"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:text="商品价格"
            android:textSize="@dimen/text_16sp" />

        <View
            android:layout_width="@dimen/layout_1dp"
            android:layout_height="@dimen/layout_24dp"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:layout_marginRight="@dimen/layout_m8dp"
            android:background="@color/md_grey_300"></View>

        <EditText
            android:id="@+id/et_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_m8dp"
            android:layout_weight="1"
            android:background="@color/trans_w"
            android:hint="请输入您修改的商品价格"
            android:inputType="numberDecimal"
            android:textColor="@color/black_1"
            android:textColorHint="@color/black_3"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1dp"
        android:background="@color/md_grey_300"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_m8dp"
        android:text="注:商品价格必须大于商品原有的价格"
        android:textColor="@color/md_red_300"
        android:textSize="@dimen/text_14sp"/>

    <TextView
        android:id="@+id/tv_daixiao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_40dp"
        android:layout_marginLeft="@dimen/layout_m8dp"
        android:layout_marginRight="@dimen/layout_m8dp"
        android:layout_marginTop="@dimen/layout_24dp"
        android:background="@drawable/sign_up_sel"
        android:gravity="center"
        android:text="提交申请"
        android:textColor="@color/white_1"
        android:textSize="@dimen/text_16sp" />

</LinearLayout>

