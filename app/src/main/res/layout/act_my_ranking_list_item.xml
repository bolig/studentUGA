<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_item1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_48dp"
        android:textSize="@dimen/text_14sp"
        android:text="1"
        android:layout_weight="1"
        android:paddingLeft="@dimen/layout_m8dp"
        android:paddingRight="@dimen/layout_4dp"
        android:gravity="center_vertical"
        android:textColor="@color/black_1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_item2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_48dp"
        android:textSize="@dimen/text_14sp"
        android:text="用户名"
        android:layout_weight="1"
        android:paddingLeft="@dimen/layout_4dp"
        android:paddingRight="@dimen/layout_4dp"
        android:gravity="center_vertical"
        android:textColor="@color/black_1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_item3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_48dp"
        android:textSize="@dimen/text_14sp"
        android:text="赛区"
        android:layout_weight="1"
        android:paddingLeft="@dimen/layout_4dp"
        android:paddingRight="@dimen/layout_4dp"
        android:gravity="center_vertical"
        android:textColor="@color/black_1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_item4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_48dp"
        android:textSize="@dimen/text_14sp"
        android:text="学校"
        android:layout_weight="1"
        android:paddingLeft="@dimen/layout_4dp"
        android:paddingRight="@dimen/layout_8dp"
        android:gravity="center_vertical"
        android:textColor="@color/black_1"
        android:singleLine="true" />

</LinearLayout>
