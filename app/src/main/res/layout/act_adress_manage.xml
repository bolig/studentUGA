<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.peoit.android.studentuga.ui.AdressManageActivity">

    <com.peoit.android.studentuga.view.list.SwipyRefreshLayout
        android:id="@+id/pull_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:direction="bottom">

        <com.peoit.android.studentuga.view.list.swipe.SwipeMenuListView
            android:id="@+id/lvmenu_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/shopcar_line"
            android:dividerHeight="@dimen/layout_8dp"
            android:scrollbars="none"
            android:listSelector="@drawable/draw_user_item_sel">

        </com.peoit.android.studentuga.view.list.swipe.SwipeMenuListView>

    </com.peoit.android.studentuga.view.list.SwipyRefreshLayout>

</RelativeLayout>
