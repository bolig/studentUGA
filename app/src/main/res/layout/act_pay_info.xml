<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.peoit.android.studentuga.ui.PayInfoActivity">

    <ListView
        android:id="@+id/lv_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_grey_100"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@color/white_"
        android:dividerHeight="4dp"
        android:minHeight="120dp"
        android:paddingBottom="@dimen/layout_52dp"
        android:paddingTop="@dimen/layout_4dp"
        android:scrollbars="none">

    </ListView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white_"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_m8dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="合计:"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_m8dp"
                android:gravity="center"
                android:singleLine="true"
                android:minWidth="@dimen/layout_64dp"
                android:text="¥0"
                android:textColor="@color/col_select_p"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:id="@+id/tv_add_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_m8dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="不含运费"
                android:textColor="@color/black_2"
                android:textSize="@dimen/text_12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_shop_close"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_m8dp"
                android:background="@drawable/draw_shop_close_sel"
                android:gravity="center"
                android:singleLine="true"
                android:text="确认"
                android:textColor="@color/white_1"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_6dp"
        android:layout_above="@+id/ll_bottom"
        android:background="@drawable/draw_bg_up"></View>

</RelativeLayout>
