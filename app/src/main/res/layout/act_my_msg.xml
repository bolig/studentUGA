<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_"
    tools:context="com.peoit.android.studentuga.ui.MyMsgActivity">

    <com.peoit.android.studentuga.view.list.SwipyRefreshLayout
        android:id="@+id/pull_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:direction="both">

        <com.peoit.android.studentuga.view.list.swipe.SwipeMenuListView
            android:id="@+id/lvmenu_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/md_grey_300"
            android:dividerHeight="@dimen/layout_1dp"
            android:scrollbars="none"
            android:listSelector="@drawable/draw_user_item_sel">

        </com.peoit.android.studentuga.view.list.swipe.SwipeMenuListView>

    </com.peoit.android.studentuga.view.list.SwipyRefreshLayout>

    <FrameLayout
        android:id="@+id/fl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</RelativeLayout>
