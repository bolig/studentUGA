<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_200"
    android:orientation="vertical"
    tools:context="com.peoit.android.studentuga.ui.LoginActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1dp"
        android:layout_marginTop="@dimen/layout_24dp"
        android:background="@color/md_grey_300"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_m8dp"
                android:text="  账户名  "
                android:textSize="@dimen/text_16sp" />

            <EditText
                android:id="@+id/et_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_m8dp"
                android:layout_marginRight="@dimen/layout_m8dp"
                android:layout_weight="1"
                android:background="@color/trans_w"
                android:hint="请输入你的用户名"
                android:textColor="@color/black_1"
                android:textColorHint="@color/black_3"
                android:textSize="@dimen/text_16sp" />

            <ImageView
                android:id="@+id/iv_selectLateName"
                android:layout_width="@dimen/layout_48dp"
                android:layout_height="@dimen/layout_48dp"
                android:layout_marginRight="@dimen/layout_m8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_d"
                android:visibility="gone"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_1dp"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:layout_marginRight="@dimen/layout_m8dp"
            android:background="@color/md_grey_300"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_m8dp"
                android:text="登录密码"
                android:textSize="@dimen/text_16sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_m8dp"
                android:layout_marginRight="@dimen/layout_m8dp"
                android:layout_weight="1"
                android:background="@color/trans_w"
                android:hint="请输入你的密码"
                android:inputType="textPassword"
                android:textColor="@color/black_1"
                android:textColorHint="@color/black_3"
                android:textSize="@dimen/text_16sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1dp"
        android:background="@color/md_grey_300"></View>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_40dp"
        android:layout_marginLeft="@dimen/layout_m8dp"
        android:layout_marginRight="@dimen/layout_m8dp"
        android:layout_marginTop="@dimen/layout_24dp"
        android:background="@drawable/sign_up_sel"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white_1"
        android:textSize="@dimen/text_16sp" />

    <TextView
        android:id="@+id/tv_find_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/layout_m8dp"
        android:layout_marginRight="@dimen/layout_m8dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="@dimen/layout_4dp"
        android:paddingLeft="@dimen/layout_m8dp"
        android:paddingRight="@dimen/layout_m8dp"
        android:paddingTop="@dimen/layout_4dp"
        android:text="找回密码"
        android:textColor="@color/col_shop_car_edit"
        android:textSize="@dimen/text_16sp" />

    <TextView
        android:id="@+id/tv_registor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/draw_login_registor_sel"
        android:paddingBottom="@dimen/layout_4dp"
        android:paddingLeft="@dimen/layout_m16dp"
        android:paddingRight="@dimen/layout_m16dp"
        android:paddingTop="@dimen/layout_4dp"
        android:text="免费注册"
        android:textColor="@color/col_login_registor"
        android:textSize="@dimen/text_16sp" />

</LinearLayout>
