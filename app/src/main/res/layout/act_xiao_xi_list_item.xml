<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_m4dp"
        android:layout_marginLeft="@dimen/layout_8dp"
        android:layout_marginRight="@dimen/layout_8dp"
        android:layout_marginTop="@dimen/layout_8dp"
        android:text=""
        android:textColor="@color/md_deep_orange_500"
        android:textSize="@dimen/text_14sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_m4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/layout_8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/black_2"
        android:textSize="@dimen/text_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_8dp"
        android:layout_marginLeft="@dimen/layout_m16dp"
        android:layout_marginRight="@dimen/layout_m16dp"
        android:layout_marginTop="@dimen/layout_m4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="111"
            android:textColor="@color/black_3"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/draw_add_sel"
            android:drawableRight="@drawable/draw_arrow_hov_sel"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_6dp"
            android:paddingRight="@dimen/layout_2dp"
            android:singleLine="true"
            android:text="更多"
            android:textColor="@color/black_2"
            android:textSize="@dimen/text_14sp" />

    </LinearLayout>

</LinearLayout>
