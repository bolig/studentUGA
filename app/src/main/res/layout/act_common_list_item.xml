<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_grey_100"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.peoit.android.studentuga.view.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/layout_24dp"
            android:layout_height="@dimen/layout_24dp"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:src="@drawable/user_avater" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:layout_weight="1"
            android:text="111"
            android:textColor="@color/black_2"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_hao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:text="好评度:"
            android:textColor="@color/black_2"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/tv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_m8dp"
            android:text="5"
            android:textColor="@color/md_red_500"
            android:textSize="@dimen/text_14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="@dimen/layout_26dp"
        android:text="111"
        android:textColor="@color/black_2"
        android:textSize="@dimen/text_14sp" />

    <com.peoit.android.studentuga.view.NoSrcollGridView
        android:id="@+id/gv_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_m4dp"
        android:layout_marginLeft="@dimen/layout_26dp"
        android:layout_marginRight="@dimen/layout_80dp"
        android:layout_marginTop="@dimen/layout_m4dp"
        android:horizontalSpacing="@dimen/layout_2dp"
        android:numColumns="3"
        android:verticalSpacing="@dimen/layout_2dp"
        android:visibility="gone"></com.peoit.android.studentuga.view.NoSrcollGridView>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_6dp"
        android:layout_marginLeft="@dimen/layout_m8dp"
        android:layout_marginRight="@dimen/layout_m8dp"
        android:layout_marginTop="@dimen/layout_6dp"
        android:gravity="right"
        android:text="2015-11-1 "
        android:textColor="@color/black_3"
        android:textSize="@dimen/text_12sp" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1dp"
        android:background="@color/md_grey_300"></View>

</LinearLayout>
