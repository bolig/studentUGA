<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.peoit.android.studentuga.ui.TradeLogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_48dp"
        android:background="@color/white_"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="11111111"
            android:textColor="@color/black_1"
            android:textSize="@dimen/text_16sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:layout_marginRight="@dimen/layout_m8dp"
            android:singleLine="true"
            android:text="2015-10-10 10:20"
            android:textColor="@color/black_2"
            android:textSize="@dimen/text_14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_48dp"
        android:background="@color/white_"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_payWay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="11111111"
            android:textColor="@color/black_2"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_payMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:layout_marginRight="@dimen/layout_m8dp"
            android:singleLine="true"
            android:text="-100.00"
            android:textColor="@color/col_money_trade"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>

</LinearLayout>
