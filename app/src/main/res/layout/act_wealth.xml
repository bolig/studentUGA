<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_"
    android:orientation="vertical"
    tools:context="com.peoit.android.studentuga.ui.WealthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="￥0.00"
            android:textColor="@color/col_select_p"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_m8dp"
            android:singleLine="true"
            android:text="创业币余额"
            android:textColor="@color/black_2"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_m8dp"
        android:background="@drawable/home_header_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_payUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_48dp"
            android:background="@drawable/draw_user_item_sel"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/layout_24dp"
                android:layout_height="@dimen/layout_24dp"
                android:layout_marginLeft="@dimen/layout_m16dp"
                android:layout_marginRight="@dimen/layout_m16dp"
                android:src="@drawable/pay_up" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="充值创业币"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_16sp" />

            <ImageView
                android:layout_width="@dimen/layout_24dp"
                android:layout_height="@dimen/layout_24dp"
                android:layout_marginLeft="@dimen/layout_m16dp"
                android:layout_marginRight="@dimen/layout_m16dp"
                android:src="@drawable/ic_arrow_r" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_1dp"
            android:layout_marginLeft="56dp"
            android:background="@color/black_3_1"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_toMoney"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_48dp"
            android:background="@drawable/draw_user_item_sel"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/layout_24dp"
                android:layout_height="@dimen/layout_24dp"
                android:layout_marginLeft="@dimen/layout_m16dp"
                android:layout_marginRight="@dimen/layout_m16dp"
                android:src="@drawable/to_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提现创业币"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_16sp" />

            <ImageView
                android:layout_width="@dimen/layout_24dp"
                android:layout_height="@dimen/layout_24dp"
                android:layout_marginLeft="@dimen/layout_m16dp"
                android:layout_marginRight="@dimen/layout_m16dp"
                android:src="@drawable/ic_arrow_r" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_1dp"
            android:layout_marginLeft="56dp"
            android:background="@color/black_3_1"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_water_course"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_48dp"
            android:background="@drawable/draw_user_item_sel"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/layout_24dp"
                android:layout_height="@dimen/layout_24dp"
                android:layout_marginLeft="@dimen/layout_m16dp"
                android:layout_marginRight="@dimen/layout_m16dp"
                android:src="@drawable/water_course" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="收支流水"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_16sp" />

            <ImageView
                android:layout_width="@dimen/layout_24dp"
                android:layout_height="@dimen/layout_24dp"
                android:layout_marginLeft="@dimen/layout_m16dp"
                android:layout_marginRight="@dimen/layout_m16dp"
                android:src="@drawable/ic_arrow_r" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_m8dp"
        android:background="@drawable/home_header_line"></View>

</LinearLayout>
