<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/layout_80dp"
        android:layout_height="@dimen/layout_80dp"
        android:layout_margin="@dimen/layout_m8dp"
        android:src="@drawable/noproduct"
        android:scaleType="centerCrop"/>
    <TextView android:visibility="gone"
        android:id="@+id/tv_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="11111111111111"
        android:textSize="@dimen/text_14sp"
        android:textColor="@color/black_2"
        android:maxLines="2"
        android:ellipsize="end" />
    <LinearLayout android:id="@+id/ll_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_80dp"
        android:layout_marginLeft="@dimen/layout_m8dp"
        android:layout_marginRight="@dimen/layout_m8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11111111111111"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/black_2"
            android:maxLines="3"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="11111111111111"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/black_3"
            android:layout_marginTop="@dimen/layout_4dp"
            android:layout_marginBottom="@dimen/layout_4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¥500.00"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/md_red_500"
                android:layout_marginTop="@dimen/layout_4dp"
                android:layout_marginBottom="@dimen/layout_4dp" />

            <TextView
                android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/black_3"
                android:layout_marginTop="@dimen/layout_4dp"
                android:layout_marginLeft="@dimen/layout_m8dp"
                android:layout_marginRight="@dimen/layout_m8dp"
                android:layout_marginBottom="@dimen/layout_4dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="right"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
