<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_height"
    android:layout_alignParentLeft="true">

    <View
        android:id="@+id/view_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolber_padding_top"></View>

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/col_main"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_52dp"
        android:layout_below="@+id/view_titlebar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_m8dp">

            <View
                android:id="@+id/view_l_bg"
                android:layout_width="@dimen/layout_40dp"
                android:layout_height="@dimen/layout_40dp"
                android:background="@drawable/circle_bg_sel"></View>

            <com.andexert.library.RippleView
                android:id="@+id/ripple_l"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:rv_centered="true"
                app:rv_type="simpleRipple">

                <ImageView
                    android:id="@+id/iv_l"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back" />

            </com.andexert.library.RippleView>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxEms="8"
            android:singleLine="true"
            android:text="商品详情"
            android:textColor="@color/white_"
            android:textSize="@dimen/text_16sp" />

        <TextView
            android:id="@+id/tv_r"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:ellipsize="none"
            android:gravity="center"
            android:maxEms="4"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/col_action_r_text"
            android:textSize="14dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_m8dp"
            android:layout_marginLeft="@dimen/layout_m8dp">

            <View
                android:id="@+id/view_r_bg"
                android:layout_width="@dimen/layout_40dp"
                android:layout_height="@dimen/layout_40dp"
                android:background="@drawable/circle_bg_sel"></View>

            <com.andexert.library.RippleView
                android:id="@+id/ripple_r"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:rv_centered="true"
                app:rv_type="simpleRipple">

                <ImageView
                    android:id="@+id/iv_r"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/shopcar"
                    android:padding="@dimen/layout_m8dp" />

            </com.andexert.library.RippleView>

        </RelativeLayout>

