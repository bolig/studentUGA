<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_100"
    android:orientation="vertical"
    tools:context="com.peoit.android.studentuga.ui.PayUpActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1dp"
        android:layout_marginTop="@dimen/layout_24dp"
        android:background="@color/md_grey_300"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_48dp"
        android:background="@color/white_"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:layout_marginRight="@dimen/layout_m8dp"
            android:text="充值金额"
            android:textColor="@color/black_2"
            android:textSize="@dimen/text_16sp" />

        <EditText
            android:id="@+id/et_payUp_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_m8dp"
            android:layout_marginRight="@dimen/layout_m8dp"
            android:layout_weight="1"
            android:background="@color/trans_w"
            android:hint="请输入金额"
            android:singleLine="true"
            android:textColor="@color/black_1"
            android:textColorHint="@color/black_3"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1dp"
        android:background="@color/md_grey_300"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_48dp"
        android:layout_marginLeft="@dimen/layout_m8dp"
        android:layout_marginRight="@dimen/layout_m8dp"
        android:gravity="center"
        android:text="充值方式"
        android:textColor="@color/black_2"
        android:textSize="@dimen/text_16sp" />

    <LinearLayout
        android:id="@+id/ll_payUp_zfb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_56dp"
        android:background="@drawable/draw_user_item_sel"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/layout_24dp"
            android:layout_height="@dimen/layout_24dp"
            android:layout_marginLeft="@dimen/layout_m16dp"
            android:layout_marginRight="@dimen/layout_m16dp"
            android:src="@drawable/draw_shop_select_sel" />

        <ImageView
            android:layout_width="@dimen/layout_40dp"
            android:layout_height="@dimen/layout_40dp"
            android:layout_marginRight="@dimen/layout_m16dp"
            android:src="@drawable/zfb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="支付宝支付"
            android:textColor="@color/black_1"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1dp"
        android:background="@color/black_3_1"></View>

    <LinearLayout
        android:id="@+id/ll_payUp_wx"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_56dp"
        android:background="@drawable/draw_user_item_sel"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/layout_24dp"
            android:layout_height="@dimen/layout_24dp"
            android:layout_marginLeft="@dimen/layout_m16dp"
            android:layout_marginRight="@dimen/layout_m16dp"
            android:src="@drawable/draw_shop_select_sel" />

        <ImageView
            android:layout_width="@dimen/layout_40dp"
            android:layout_height="@dimen/layout_40dp"
            android:layout_marginRight="@dimen/layout_m16dp"
            android:src="@drawable/wx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="微信支付"
            android:textColor="@color/black_1"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1dp"
        android:background="@color/md_grey_300"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_payUp_xsf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_56dp"
        android:background="@drawable/draw_user_item_sel"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/layout_24dp"
            android:layout_height="@dimen/layout_24dp"
            android:layout_marginLeft="@dimen/layout_m16dp"
            android:layout_marginRight="@dimen/layout_m16dp"
            android:src="@drawable/draw_shop_select_sel" />

        <ImageView
            android:layout_width="@dimen/layout_40dp"
            android:layout_height="@dimen/layout_40dp"
            android:layout_marginRight="@dimen/layout_m16dp"
            android:src="@drawable/xzf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="兴首付支付"
            android:textColor="@color/black_1"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_pay_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_40dp"
        android:layout_marginLeft="@dimen/layout_m8dp"
        android:layout_marginRight="@dimen/layout_m8dp"
        android:layout_marginTop="@dimen/layout_24dp"
        android:background="@drawable/sign_up_sel"
        android:gravity="center"
        android:text="充值"
        android:textColor="@color/white_1"
        android:textSize="@dimen/text_16sp" />

</LinearLayout>
