<?xml version="1.0" encoding="utf-8"?>
<com.peoit.android.peoit_lib.view.cardView.LinearCradView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    card_view:cardCornerRadius="1dp"
    card_view:cardBackgroundColor="@color/white_"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/title_banner" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_24dp"
        android:text="11"
        android:gravity="center"
        android:textSize="@dimen/text_11sp"
        android:textColor="@color/black_2" />

</com.peoit.android.peoit_lib.view.cardView.LinearCradView>
