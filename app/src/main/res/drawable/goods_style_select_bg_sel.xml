<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="2dp"></corners>
            <stroke android:width="@dimen/layout_1dp" android:color="@color/md_red_500"></stroke>
            <solid android:color="@color/md_red_50"></solid>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="2dp"></corners>
            <stroke android:width="@dimen/layout_1dp" android:color="@color/md_red_500"></stroke>
            <solid android:color="@color/md_red_50"></solid>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="2dp"></corners>
            <stroke android:width="@dimen/layout_1dp" android:color="@color/md_grey_500"></stroke>
        </shape>
    </item>
</selector>
